<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">



        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="gloser/Practice" >
                <span class="oi oi-list-rich" aria-hidden="true"></span>Practice
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="gloser/Testing" >
                <span class="oi oi-list-rich" aria-hidden="true"></span>Testing
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Tests" @onclick="HandleReport" >
                <span class="oi oi-list-rich" aria-hidden="true"></span>Show Tests
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Setup">
                <span class="oi oi-list-rich" aria-hidden="true"></span>Setup
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Login" hidden="@IsHidden">
                <span class="oi oi-list-rich" aria-hidden="true"></span>Login

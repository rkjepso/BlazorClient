</div>

@code {

    static NavMenu __this = null;
    static public NavMenu GetNavMenu()
    {
        return __this;
    }

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private bool IsHidden
    {
        get
        {
            __this = this;
            // StateHasChanged();
            return Program.IsLoggedIn;
        }
    }

    public void DoStateHasChanged()
    {
        StateHasChanged();
    }

    @inject NavigationManager NavigationManager;
    private void HandlePractice()
    {
        NavigationManager.NavigateTo("gloser/Practice", false);
    }

    private void HandleTesting()
    {
        NavigationManager.NavigateTo("gloser/Testing", false);
    }

    private void HandleReport()
    {
        NavigationManager.NavigateTo("Tests", false);
    }
}
